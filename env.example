# BSM Platform - Environment Configuration
# Copy this file to .env.local and update with your actual values

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================
# Get these values from your Supabase project dashboard
# Go to Settings â†’ API in your Supabase project

# Your Supabase project URL (starts with https://)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Your Supabase anonymous key (starts with eyJ)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Your Supabase service role key (starts with eyJ) - for admin operations
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application URL (change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_generate_random_string

# ===========================================
# AI INTEGRATION (OPTIONAL)
# ===========================================
# Get API key from Google AI Studio: https://makersuite.google.com/app/apikey

# Gemini AI API key for automated responses
GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# Configure SMTP for email notifications

# SMTP server configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# ===========================================
# DATABASE CONFIGURATION (OPTIONAL)
# ===========================================
# Direct database connection (if needed)

# Database connection string
DATABASE_URL=your_database_url

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Maximum file size for uploads (in bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file types for uploads
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features

# Enable AI features (automated responses, smart routing)
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable live chat functionality
NEXT_PUBLIC_ENABLE_CHAT=true

# Enable analytics and reporting
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable real-time features
NEXT_PUBLIC_ENABLE_REALTIME=true

# Enable file uploads
NEXT_PUBLIC_ENABLE_UPLOADS=true

# Enable email notifications
NEXT_PUBLIC_ENABLE_EMAIL=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable debug mode (set to false in production)
NEXT_PUBLIC_DEBUG=false

# Enable mock data fallback (set to false in production)
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# Development mode (set to false in production)
NODE_ENV=development

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Uncomment and configure for production deployment

# Production URL (replace with your domain)
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXTAUTH_URL=https://your-domain.com

# Production environment
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS origins (comma-separated)
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Session timeout (in seconds)
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# Rate limiting (requests per minute)
NEXT_PUBLIC_RATE_LIMIT=100

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_MONITORING=true

# Analytics tracking ID (Google Analytics, etc.)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Error tracking (Sentry, etc.)
NEXT_PUBLIC_ERROR_TRACKING_DSN=your_error_tracking_dsn

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Slack integration (optional)
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Microsoft Teams integration (optional)
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# ===========================================
# BACKUP & RECOVERY
# ===========================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# CUSTOMIZATION
# ===========================================

# Application name
NEXT_PUBLIC_APP_NAME=BSM Platform

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Company information
NEXT_PUBLIC_COMPANY_NAME=Your Company
NEXT_PUBLIC_COMPANY_EMAIL=support@yourcompany.com
NEXT_PUBLIC_COMPANY_PHONE=+1-555-0123

# ===========================================
# NOTES
# ===========================================
# 1. Never commit .env.local to version control
# 2. Generate strong secrets for production
# 3. Use environment-specific values for different deployments
# 4. Test all configurations before going live
# 5. Keep backups of your environment files